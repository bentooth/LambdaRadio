<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:LambdaRadio.Controls"
             x:Class="LambdaRadio.Pages.SearchPage" Title="λ">

    <ContentPage.Content>
        <Grid RowDefinitions="auto,auto,*">

            <SearchBar Grid.Row="0" Placeholder="What do you want to listen to?" BackgroundColor="White">
            </SearchBar>

            <ScrollView Grid.Row="1">
            </ScrollView>

            <controls:MiniPlayer x:Name="player" VerticalOptions="End" Grid.Row="2"/>

        </Grid>
    </ContentPage.Content>

</ContentPage>
 