<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:LambdaRadio.Controls"
             xmlns:viewmodel="clr-namespace:LambdaRadio.ViewModels"
             x:DataType="viewmodel:HomeViewModel"
             x:Class="LambdaRadio.Pages.HomePage"
             Title="{Binding Title}">

    <ContentPage.Content>
        <Grid RowDefinitions="auto,*">

            <ScrollView Grid.Row="0">
            </ScrollView>

            <controls:MiniPlayer x:Name="player" VerticalOptions="End" Grid.Row="1"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>
