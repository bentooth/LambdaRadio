<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="LambdaRadio.Controls.MiniPlayer"
			 Margin="8,0,8,4"
			 IsVisible="true">

    <ContentView.Content>


        <Grid ColumnDefinitions="50,*,50" BackgroundColor="White">


            <Image Grid.Column="0" Source="ice_cover.jpg"
						WidthRequest="30"
						HeightRequest="30"
						HorizontalOptions="Center"                   
						VerticalOptions="Center" />

            <VerticalStackLayout Grid.Column="1" Padding="4" VerticalOptions="Center">
                <Label Text="One More Time" FontFamily="SpotifyBold"/>
                <Label Text="Daft Punk" FontSize="12" TextColor="Gray" FontFamily="SpotifyLight"/>
            </VerticalStackLayout>

            <Image Grid.Column="3" Source="play.png"
						WidthRequest="25"
						HeightRequest="25"
						HorizontalOptions="Center"                   
						VerticalOptions="Center" />

        </Grid>



    </ContentView.Content>

</ContentView>